<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <link rel="stylesheet" href="css/style.css">
    <title>Document</title>
</head>
<body>
    {{>header}}
    <div class="container">
        <div class="row my-4">
            <div class="col-lg-12">
                {{!-- <h1>{{message.type}}</h1> --}}
                
                {{#if "message.type == 'successs'"}}
                <div  class="alert alert-dismissible fade show alert-{{message.type}}" role="alert">         
                    <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="close" style="color: green;">
                    </button>
                     <strong>{{message.message}}</strong>
                </div>
                {{else}}
                {{#if "message.type == 'danger'"}} 
                  <div  class="alert alert-dismissible fade show alert-danger" role="alert">         
                    <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="close" style="color: green;">
                    </button>
                     <strong>{{message.message}}</strong>
                </div>
                
                {{else}}
                
                       <div  class="alert alert-dismissible fade show alert-danger" role="alert" style="visibility: hidden;">         
                    <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="close" style="color: green; visibility:hidden">
                    </button>
                     <strong>{{message.message}}</strong>
                </div>
                {{/if}}
                {{/if}}
                <div class="table-responsive">
                    
                   <table class="table table-striped text-center">
                          
                        <thead>
                            <tr class="table-dark">
                                <th>ID</th>
                                <th>Image</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                          {{#each users }}   
                        <tbody>
                           
                         <td>{{this.num}}</td>
                         <td><img src="backend/image/{{this.image}}" alt={{this.image}} style="width:6rem; height:4rem"></td>
                          
                         <td>{{this.name}}</td>
                         <td>{{this.email}}</td>
                         <td>{{this.Phone}}</td>
                         <td>
                            <a href="/edit/{{this._id}}" class="text-success"><i class="fas fa-edit fa-lg mx-1"></i></a>
                            <a href="/delete/{{this._id}}" class="text-danger"><i class="fas fa-trash fa-lg mx-1"></i></a>

                         </td>
                         
                        </tbody>
                             {{/each}}       
                   </table>
                
                </div>
            </div>
        </div>
       
    </div>
</body>
</html>